[MASTER]
# Список каталогов, где искать исходные файлы
init-hook='import sys; sys.path.append("src")'

# Игнорируемые папки/файлы
ignore=env,__pycache__,.git,.venv

# Список модулей, которые не проверять
ignored-modules=tests,main

[MESSAGES CONTROL]

# Включить только определённые сообщения
enable=missing-docstring,invalid-name,line-too-long

# Отключить конкретные коды ошибок
disable=C0114,C0115,C0116,R0912,R0915,R0914,C0301,W0621,W0105,C0413,W0212,W0107,R0903,W0707,W1309,F0011,W1203,W0718,C0103,W0718,W0622,E1101,R0801


[FORMAT]
# Длина строки
max-line-length=100

[BASIC]
# Проверка имён переменных, функций и классов
variable-naming-style=snake_case
function-naming-style=snake_case
class-naming-style=PascalCase